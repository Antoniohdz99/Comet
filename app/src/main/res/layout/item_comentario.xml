<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"


    android:paddingBottom="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/Gris_chocolate"
      android:layout_marginBottom="0dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/news_img_usr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@color/Gris_chocolate"
            android:src="@drawable/ic_perfil"
            android:contentDescription="TODO" />
        <TextView
            android:id="@+id/news_tex_nom_usr"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:textColor="@color/Negro_pastel"
            android:text="@string/nombre_Res"
            android:textSize="9pt"
            />

    </LinearLayout>
        <ImageView
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:id="@+id/nesw_img_com_usr"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/Gris_chocolate"
            android:src="@drawable/ic_comet_white"/>


    </LinearLayout>

</RelativeLayout>